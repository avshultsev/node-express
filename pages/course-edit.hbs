<h1>Edit {{course.title}} course</h1>

<form action="/courses/edit" method="post">
    <div class="input-field col s6">
        <input id="title" name='title' type="text" required class="validate" value="{{course.title}}">
        <label for="title">Title</label>
        <span class="helper-text" data-error="Incorrect name"></span>
    </div>

    <div class="input-field col s6">
        <input id="price" name='price' type="text" required class="validate" value="{{course.price}}">
        <label for="price">Price</label>
        <span class="helper-text" data-error="Invalid price"></span>
    </div>

    <div class="input-field col s6">
        <input id="imgUrl" name='imgUrl' type="text" required class="validate" value="{{course.imgUrl}}">
        <label for="imgUrl">URL of image</label>
        <span class="helper-text" data-error="Incorrect URL"></span>
    </div>
    <input type="hidden" name="id" value="{{course.id}}">
    <input type="hidden" name="_csrf" value={{csurf}}>
    <button class='btn btn-primary' type="submit">Save changes</button>
</form>
<form action="/courses/remove" method="post">
    <input type="hidden" name="id" value='{{course.id}}'>
    <input type="hidden" name="_csrf" value={{csurf}}>
    <button class='btn red' type="submit">Delete</button>
</form>