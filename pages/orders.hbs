<h1>Orders</h1>

{{#if orders.length}}
  {{#each orders}}
    <div class="row">
      <div class="col s6 offset-s3">
        <div class="card">
          <div class="card-content">
            <p>Order #{{_id}}</p>
            <p class='date'>{{date}}</p>
            <p><em>{{user.name}}</em> ({{user.userId.email}})</p>

            <ol>
              {{#each courses}}
                <li>
                  <p>{{course.title}} x{{count}}</p>
                </li>
              {{/each}}
            </ol>

            <hr>
            <p><strong>Price: </strong><span class='price'>{{totalPrice}}</span></p>
          </div>
        </div>
      </div>
    </div>
  {{/each}}
{{else}}
  <h3>You haven't made any orders so far.</h3>
{{/if}}